<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="5dp"
    >
    <RelativeLayout
        android:id="@+id/Reablay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:id="@+id/Reaalay"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/ImgItemHome"
                android:layout_width="178dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_zhanwei"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_marginTop="-5dp"
                />
            <jp.shts.android.library.TriangleLabelView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:backgroundColor="#d3362e"
                app:corner="leftTop"
                app:labelBottomPadding="5dp"
                app:labelCenterPadding="0dp"
                app:labelTopPadding="10dp"
                app:primaryText="荐"
                app:primaryTextColor="@color/white"
                app:primaryTextSize="16sp"
                app:secondaryTextColor="@color/white"
                app:secondaryTextSize="11sp" />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/Reablay"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/TvItemHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数码"
            android:textSize="11sp"
            android:textColor="@color/text_gray33"
            android:layout_below="@+id/Reaalay"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvItemHome"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"
            >
            <RelativeLayout
                android:id="@+id/quanlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:id="@+id/quanhoutv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海大教育"
                    android:textColor="@color/text_gray33"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/quantva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥50"
                android:textColor="@color/lay_blue"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/quanlay"

                />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
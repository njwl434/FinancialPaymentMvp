<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <com.saileikeji.wllibrary.view.TopBar
        android:id="@+id/mTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layoutbg="@color/lay_blue"
        app:leftSrc="@mipmap/ic_back"
        app:title="登录"></com.saileikeji.wllibrary.view.TopBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="@dimen/item_padding"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎登录/注册E帮人"
            android:textSize="13sp"
            android:textColor="@color/text_gray33"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:layout_marginTop="24dp"
        >
        <EditText
            android:id="@+id/a_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textSize="12sp"
            android:textColorHint="@color/text_grayb"
            android:textColor="@color/black"
            android:background="@null"
            android:inputType="phone"
            android:singleLine="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="14dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginRight="@dimen/item_padding"
        android:layout_marginTop="17dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/a_et_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:textSize="12sp"
                android:textColorHint="@color/text_grayb"
                android:textColor="@color/black"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:layout_centerVertical="true"
                />
            <Button
                android:id="@+id/a_bt_verification"
                android:layout_width="76dp"
                android:layout_height="30dp"
                android:text="获取验证码"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_grayee_line"
                style="?android:attr/borderlessButtonStyle"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="14dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_padding"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/a_tv_wjpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="@color/text_grayb"
            android:layout_alignParentRight="true"
            android:textSize="11sp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/a_bt_login"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginRight="@dimen/item_padding"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginTop="21dp"
        android:text="登录"
        android:textSize="15sp"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/shape_blue_full"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        >
        <TextView
            android:id="@+id/a_tv_passwordtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码登录"
            android:textSize="11sp"
            android:textColor="@color/text_grayb"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:textSize="11sp"
            android:textColor="@color/text_grayb"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</LinearLayout>
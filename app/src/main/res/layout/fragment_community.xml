<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_head" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/roll_view_pager"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <include layout="@layout/include_thick_line" />
    <com.saileikeji.ebangren.widgit.MyGridView
        android:id="@+id/RecycleaHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:numColumns="2"></com.saileikeji.ebangren.widgit.MyGridView>
    <include layout="@layout/include_thick_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/mTvchome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐圈子"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_gray22"
            />
        <ImageView
            android:id="@+id/mIvImgchome"
            android:layout_width="15dp"
            android:layout_height="15sp"
            android:background="@mipmap/button_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="14sp"
            android:textColor="@color/text_gray77"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/mIvImgchome"
            />
    </RelativeLayout>
    <com.saileikeji.ebangren.widgit.MyGridView
        android:id="@+id/Recycleaquanzi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:nestedScrollingEnabled="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:numColumns="4"></com.saileikeji.ebangren.widgit.MyGridView>
    <include layout="@layout/include_thick_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/mTvbhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热帖推荐"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_gray22"
            />
        <ImageView
            android:id="@+id/mIvImgbhome"
            android:layout_width="15dp"
            android:layout_height="15sp"
            android:background="@mipmap/button_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="14sp"
            android:textColor="@color/text_gray77"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/mIvImgbhome"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclebTuijian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:nestedScrollingEnabled="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/line_f5"></android.support.v7.widget.RecyclerView>
    <include layout="@layout/include_thick_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/mTvdhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动推荐"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_gray22"
            />
        <ImageView
            android:id="@+id/mIvImgdhome"
            android:layout_width="15dp"
            android:layout_height="15sp"
            android:background="@mipmap/button_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="14sp"
            android:textColor="@color/text_gray77"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/mIvImgdhome"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclebHuodong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:nestedScrollingEnabled="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/line_f5"></android.support.v7.widget.RecyclerView>
        <include layout="@layout/include_thick_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/mTvChanpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品推荐"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_gray22"
                />
            <ImageView
                android:id="@+id/mIvImgChanpin"
                android:layout_width="15dp"
                android:layout_height="15sp"
                android:background="@mipmap/button_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/item_padding"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="14sp"
                android:textColor="@color/text_gray77"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/mIvImgChanpin"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclebChanpin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:nestedScrollingEnabled="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/line_f5"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
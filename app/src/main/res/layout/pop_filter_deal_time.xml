<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/ll_start_deal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center">

            <TextView
                android:layout_width="31dp"
                android:layout_height="21dp"
                android:layout_marginLeft="15dp"
                android:text="开始"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_time_deallist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请选择开始日期"
                android:textColor="#999999"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="5.8dp"
                android:layout_height="10.2dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/right_arrow_blue" />
        </LinearLayout>

        <View
            android:layout_width="355dp"
            android:layout_height="1dp"
            android:background="#F2F2F2" />

        <LinearLayout
            android:id="@+id/ll_finish_deal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center">

            <TextView
                android:layout_width="31dp"
                android:layout_height="21dp"
                android:layout_marginLeft="15dp"
                android:text="结束"
                android:textColor="#333333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_time_finish_deallist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请选择结束日期"
                android:textColor="#999999"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="5.8dp"
                android:layout_height="10.2dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/right_arrow_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_reset_deal"
                android:layout_width="140dp"
                android:layout_height="46dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_gray_big_corner_line"
                android:gravity="center"
                android:text="重置"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_ok_deal"
                android:layout_width="140dp"
                android:layout_height="46dp"
                android:background="@drawable/shape_round_big_corner_primary"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
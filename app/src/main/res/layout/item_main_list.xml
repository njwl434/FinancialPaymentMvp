<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/mImglist"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_zhanwei"
        android:scaleType="centerCrop"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        >
        <TextView
            android:id="@+id/tvacommunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试测试测试测试测试测试测试测试测试测试"
            android:textColor="@color/text_gray33"
            android:textSize="11dp"
            android:maxLength="20"
            android:ellipsize="end"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"

        >

            <TextView
                android:id="@+id/mTvjuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郑州"
                android:textStyle="bold"
                android:textColor="#D3D0CF"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:visibility="gone"
                />

        <TextView
            android:id="@+id/tvccommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高新区"
            android:textColor="#D3D0CF"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/mTvjuan"
            android:layout_alignBottom="@+id/mTvjuan"
            android:layout_marginLeft="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tvccommunity"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:textColor="@color/text_grayb"
                android:src="@mipmap/ic_zhanwei"
                />
            <TextView
                android:id="@+id/mTvYishou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImgViewa"
                tools:text="150"
                android:textSize="10sp"
                android:textColor="#D3D0CF"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_f5"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lay_blue"
        android:orientation="vertical"
        android:paddingLeft="11dp"
        android:paddingRight="11dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/topbar_iv_center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/topbar_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:text="新东方"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/topbar_iv_left"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/topbar_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/topbar_iv_left"
            android:text="返回"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/topbar_img_left"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/topbar_iv_left" />

        <LinearLayout
            android:id="@+id/layoutRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topbar_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text=""
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/topbar_iv_right"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@mipmap/ic_back"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mlaycourse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/text_orange"
                android:layout_marginRight="1dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费试听"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/lay_blue"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一键拨打电话"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/mlaycourse">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/roll_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:rollviewpager_play_delay="3000" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/mlayone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_widthPercent="33.3%"
                        android:layout_centerVertical="true"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_zhanwei"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="资质认证"
                            android:layout_marginLeft="@dimen/dp_10"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mlaytwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_widthPercent="33.3%"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/mlayone"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_zhanwei"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好评如潮"
                            android:layout_marginLeft="@dimen/dp_10"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_widthPercent="33.3%"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/mlaytwo"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_zhanwei"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:layout_marginLeft="@dimen/dp_10"
                            />
                    </LinearLayout>
                </android.support.percent.PercentRelativeLayout>
                <include layout="@layout/include_line" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_zhanwei"
                            android:layout_marginLeft="@dimen/item_padding"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="机构新用户可领取8.8折"
                            android:textColor="@color/text_black"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_padding"
                        android:layout_centerVertical="true"
                        android:background="@color/text_orange"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="立即领取"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:padding="7dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <include layout="@layout/include_thick_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1"
                        >
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="机构简介"
                        android:textColor="@color/lay_blue"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="课程列表"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计评价"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/include_line" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/item_padding"
                    android:layout_marginRight="@dimen/item_padding"
                    android:textColor="@color/text_gray77"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程(4)"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/item_padding"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/button_more"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_padding"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="口语"
                        android:textColor="@color/lay_blue"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/item_padding"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="@color/lay_blue"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_padding"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/item_padding"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400-2222-4744"
                        android:textColor="@color/lay_blue"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/item_padding"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_zhanwei"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/item_padding"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <include layout="@layout/include_line"/>
                <ImageView
                    android:id="@+id/mIvImg"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    />
                  <include layout="@layout/include_thick_line" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecycleorCourse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:nestedScrollingEnabled="false"
                    ></android.support.v7.widget.RecyclerView>
                <include layout="@layout/include_thick_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程点播"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/item_padding"
                        />
                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雅思sad,asndkajsdajklsdhaksjdhklasdanhksjdhblkjashdkjahsdkl"
                        android:textSize="15sp"
                        android:layout_marginLeft="@dimen/item_padding"
                        android:layout_marginRight="@dimen/item_padding"
                        android:textColor="@color/text_black"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/mIvImga"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点播信息"
                            android:textColor="@color/lay_blue"
                            android:textSize="15sp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点播列表"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:textStyle="bold"

                            />
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/include_line" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sahdjashdakjshbdkashdbkasjhbdkasjhdkahsdkashdkajshda"
                    android:textSize="15sp"
                    android:textColor="@color/text_gray77"
                    android:layout_marginRight="@dimen/item_padding"
                    android:layout_marginLeft="@dimen/item_padding"
                    />
            </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</LinearLayout>
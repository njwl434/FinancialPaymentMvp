<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/mImglist"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_zhanwei"
            android:scaleType="centerCrop"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                >
                <TextView
                    android:id="@+id/tvacommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试测试测试测试测试测试测试"
                    android:textColor="@color/text_gray33"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLength="20"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tvaShu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英语 美术 数学"
                    android:layout_below="@+id/tvacommunity"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray77"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <com.saileikeji.ebangren.widgit.RatingBar
                    android:id="@+id/rate"
                    android:paddingTop="5dp"
                    android:layout_below="@+id/tvaShu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    app:starCount="5"
                    app:starEmpty="@mipmap/unstar"
                    app:starFill="@mipmap/star"
                    app:starHalf="@mipmap/star"
                    app:starImageSize="15dp"
                    app:starPadding="5dp"
                    app:starStep="0"
                    app:stepSize="Half"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"

                >

                <ImageView
                    android:id="@+id/mIvImgor"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_zhanwei"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/tvccommunity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高新区"
                    android:textColor="@color/text_gray77"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/mIvImgor"
                    android:layout_alignBottom="@+id/mIvImgor"
                    android:layout_marginLeft="5dp"
                    />
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:src="@mipmap/ic_zhanwei"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/item_padding"
                 android:layout_marginTop="20dp"
                 />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_f5"
        android:layout_marginBottom="2dp"
        />
</LinearLayout>
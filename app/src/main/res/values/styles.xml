<resources>
    <style name="AppThemebase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="AppThemebase"></style>
    <style name="TextAppearance.Design.Tab.Custom" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/tabbottom_height</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabTextColor">@color/zitihui</item>
        <item name="tabSelectedTextColor">@color/juse</item>
        <item name="tabBackground">@drawable/shape_tabwhite_line</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab.Custom</item>
    </style>
</resources>
